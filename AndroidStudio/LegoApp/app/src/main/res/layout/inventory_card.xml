<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardMaxElevation="20dp"
    app:cardCornerRadius="20dp">
<RelativeLayout
    android:id="@+id/relativeLayoutInventory"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/set_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter" />
    <TextView
        android:id="@+id/set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_pieces"
        android:text="Nombre set"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/set_prize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_name"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="PRECIO"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/set_piece_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lego_piece"
        android:layout_below="@+id/set_image"
        android:layout_marginStart="10dp">
    </ImageView>
    <TextView
        android:id="@+id/set_pieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_image"
        android:layout_toEndOf="@+id/set_piece_img"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="13dp"
        android:text="Pieces"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/set_age_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lego_age"
        android:layout_toEndOf="@+id/set_pieces"
        android:layout_below="@+id/set_image"
        android:layout_marginStart="20dp">
    </ImageView>
    <TextView
        android:id="@+id/set_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_image"
        android:layout_toEndOf="@+id/set_age_img"
        android:textAlignment="center"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="13dp"
        android:text="18+"
        android:textColor="@color/black"/>
</RelativeLayout>

</androidx.cardview.widget.CardView>